{
  "applications":  {
    "gecko": {
      "id": "webextension@kinto-storage.com"
    }
  },
  "manifest_version": 2,
  "name": "Kinto Storage configurator",
  "version": "0.1",
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["scripts/inject-script.js"]
    }
  ],
  "web_accessible_resources": ["scripts/inject-kinto.js"],
  "browser_action": {
    "default_icon": {
      "19": "icons/icon-19.png",
      "38": "icons/icon-38.png"
    },
    "default_title": "Configure your kinto instance",
    "default_popup": "popup/chose_server.html"
  },
  "permissions": ["storage"]
}
